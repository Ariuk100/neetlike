rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Whiteboard uploads - allow read/write for whiteboard functionality
    match /whiteboard/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Other files require authentication
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
