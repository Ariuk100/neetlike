rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // "users" collection-ийн дүрэм
    match /users/{userId} {
      // ✅ ЗАСВАРЛАСАН: Админ хүн бүх хэрэглэгчийн мэдээллийг уншиж болно.
      allow list: if request.auth.token.role == 'admin';
      
      // Админ хүн уншиж болно, ЭСВЭЛ хэрэглэгч зөвхөн өөрийнхөө мэдээллийг уншиж болно.
      allow read: if request.auth.token.role == 'admin' || request.auth.uid == userId;

      // Хэрэглэгч зөвхөн өөрийнхөө мэдээллийг үүсгэж, шинэчилж болно.
      allow write: if request.auth.uid == userId;

      // Админ хүн бусдын мэдээллийг шинэчилж болно.
      allow update: if request.auth.token.role == 'admin';

      // Админ хүн устгаж болно.
      allow delete: if request.auth.token.role == 'admin';
    }

    // "uniquePhones" collection-ийн дүрэм
    // Нэвтэрсэн ямар ч хэрэглэгч шинэ дугаар бүртгэх (create) эсвэл хуучнаа устгах (delete) боломжтой.
    match /uniquePhones/{phone} {
      allow read, create, delete: if request.auth != null;
      allow update: if false; // Update хийхийг хориглоно
    }
    
    // Бусад бүх collection-д хандахыг хориглоно (аюулгүй байдлын үүднээс)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}